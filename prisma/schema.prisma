// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User{
  id                String @id @default(cuid())
  firstName         String?
  lastName          String?
  userName          String
  email             String
  phoneNumber       String
  location          String?
  Bio               String?
  createdDate       DateTime @default(now())
  DOB               DateTime?
}